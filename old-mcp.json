{
    "mcpServers": {
      "k6-mcp": {
        "command": "docker",
        "args": [
          "run", "--rm", "-i",
          "--security-opt", "no-new-privileges:true",
          "--read-only",
          "--tmpfs", "/tmp:noexec,nosuid,size=50m",
          "--user", "65532:65532",
          "ghcr.io/oleiade/k6-mcp:latest"
        ],
        "env": {}
      }
    }
  }